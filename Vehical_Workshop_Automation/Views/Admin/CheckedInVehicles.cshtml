@model IEnumerable<Vehical_Workshop_Automation.Models.Appointment>

@{
    ViewBag.Title = "CheckedInVehicles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="ml-3">All Checked In Vehicles</h2>
@if (Model.Count() > 0)
{
    <table class="table table-bordered">
        <tr class="thead-light">
            <th>
                @Html.DisplayNameFor(model => model.Appointment_No)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bay_No)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle_Reg_No)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer_Mobile_No)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Miles)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Appointment_No)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bay_No)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vehicle_Reg_No)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer_Mobile_No)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Slot)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Miles)
                </td>
            </tr>
        }

    </table>
}
else
{
    <center><span>No checkedin vehicle appointment found</span></center>
}
