@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/CSS/signupStyle.css">
</head>
<body>
    @using (Html.BeginForm("CustomerSignup", "Customer", FormMethod.Post))
    {
    <div class="login-form">
        <h1 style="color: #b82927">Signup Here</h1>
        <div class="txtb">
            <label for="mobileno" class="txt"> Enter Your Name</label>
            <input type="text" id="name" name="name" maxlength="13" placeholder="Enter Your Name." required>
        </div>
        <div class="txtb">
            <label for="mobileno" class="txt"> Enter Mobile No</label>
            <input type="text" id="mobileno" name="mobileno" maxlength="13" placeholder="Enter Mobile No." required>
        </div>
        <div class="txtb">
            <label for="mobileno" class="txt"> Enter Your Eamil</label>
            <input type="text" id="email" name="email" maxlength="13" placeholder="Enter Your Email." required>
        </div>
        <div class="txtb">
            <label for="mobileno" class="txt"> Enter Your Password</label>
            <input type="password" id="password" name="password" minlength="8" placeholder="Password" required>
        </div>
        <input type="submit" class="logbtn" value="Signup">
        <div class="bottom-text">
            Are You Ready To? <a href="~/Customer/Login">Login Here</a>
        </div>
    </div>
    }
</body>
</html>
