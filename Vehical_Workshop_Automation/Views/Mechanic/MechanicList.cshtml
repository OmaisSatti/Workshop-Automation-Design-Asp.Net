@model IEnumerable<Vehical_Workshop_Automation.Models.Mechanic>

@{
    ViewBag.Title = "MechanicList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="ml-3">Mechanic List</h2>
<p class="ml-3">
    <a href="~/Mechanic/AddMechanic" class="btn btn-outline-primary"> Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile_No)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>Edit/Delete</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mobile_No)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "AddMechanic", "Mechanic", new { id = item.Id, item.Name, item.Email, item.Mobile_No }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "DeleteMechanic", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
